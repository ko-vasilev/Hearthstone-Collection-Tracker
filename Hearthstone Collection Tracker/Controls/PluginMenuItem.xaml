<MenuItem x:Class="Hearthstone_Collection_Tracker.Controls.PluginMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hearthstone_Collection_Tracker.Controls"
             >
    <MenuItem.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HearthstoneCollectionTracker;component/Controls/HSCollection.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </MenuItem.Resources>
    <MenuItem.Icon>
        <Rectangle Width="16" Height="16" Margin="0,0,-10,0">
            <Rectangle.Fill>
                <VisualBrush Visual="{StaticResource CollectionTracker}" />
            </Rectangle.Fill>
        </Rectangle>
    </MenuItem.Icon>
</MenuItem>
